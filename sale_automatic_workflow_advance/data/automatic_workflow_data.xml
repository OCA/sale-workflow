<odoo noupdate="1">

    <record id="automatic_workflow_advance_payment_filter" model="ir.filters">
        <field name="name">Automatic Workflow Advance Payment Filter</field>
        <field name="model_id">sale.order</field>
        <field name="domain">[('advance_payment_status', '=', 'not_paid')]</field>
        <field name="user_id" ref="base.user_root" />
    </record>

    <record
        id="sale_automatic_workflow.automatic_validation"
        model="sale.workflow.process"
    >
        <field name="automated_advance_payment_create" eval="1" />
        <field
            name="advance_payment_filter_id"
            eval="automatic_workflow_advance_payment_filter"
        />
    </record>

</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_order_form_pwa" model="ir.ui.view">
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale_pwa_cache.view_order_form_pwa" />
        <field name="arch" type="xml">
            <xpath expr="//formPWA//header" position="inside">
                <button
                    name="%(sale_order_product_recommendation.sale_order_recommendation_action)d"
                    states="draft,sent,sale"
                    string="Recommended Products"
                    type="action"/>
            </xpath>
        </field>
    </record>
</odoo>

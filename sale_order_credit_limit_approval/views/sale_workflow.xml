<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="act_wait_for_approval" model="workflow.activity">
            <field name="wkf_id" ref="sale.wkf_sale"/>
            <field name="name">wait_for_approval</field>
            <field name="action">write({'state':'waiting_for_approval'})</field>
            <field name="kind">function</field>
        </record>

        <record id="draft_to_waiting_for_approval" model="workflow.transition">
            <field name="act_from" ref="sale.act_draft"/>
            <field name="act_to" ref="act_wait_for_approval"/>
            <field name="signal">move_to_waiting_for_approval</field>
        </record>

        <record id="sent_to_waiting_for_approval" model="workflow.transition">
            <field name="act_from" ref="sale.act_sent"/>
            <field name="act_to" ref="act_wait_for_approval"/>
            <field name="signal">move_to_waiting_for_approval</field>
        </record>

        <record id="waiting_for_approval_to_router_auto" model="workflow.transition">
            <field name="act_from" ref="act_wait_for_approval"/>
            <field name="act_to" ref="sale.act_router"/>
            <field name="condition">confirmation_allowed</field>
        </record>

        <record id="waiting_for_approval_to_router_manual" model="workflow.transition">
            <field name="act_from" ref="act_wait_for_approval"/>
            <field name="act_to" ref="sale.act_router"/>
            <field name="signal">order_confirm</field>
        </record>

        <record id="waiting_for_approval_to_cancel" model="workflow.transition">
            <field name="act_from" ref="act_wait_for_approval"/>
            <field name="act_to" ref="sale.act_cancel"/>
            <field name="signal">deny_order</field>
        </record>

    </data>
</openerp>

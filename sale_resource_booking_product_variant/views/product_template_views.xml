<data>
    <record id="product_template_form_view" model="ir.ui.view">
        <field name="name">Display resource booking info in form INHERIT</field>
        <field name="model">product.template</field>
        <field
            name="inherit_id"
            ref="sale_resource_booking.product_template_form_view"
        />
        <field name="arch" type="xml">
            <field name="resource_booking_type_id" position="attributes">
                <attribute
                    name="attrs"
                >{'readonly': [('product_variant_count', '&gt;', 1), ('is_product_variant', '=', False)]}</attribute>
            </field>
            <field
                name="resource_booking_type_combination_rel_id"
                position="attributes"
            >
                <attribute
                    name="attrs"
                >{'readonly': [('product_variant_count', '&gt;', 1), ('is_product_variant', '=', False)]}</attribute>
            </field>
        </field>
    </record>
    <record id="product_template_search_view" model="ir.ui.view">
        <field name="name">product.template.search.inherit.resource.booking</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_search_view" />
        <field name="arch" type="xml">
            <search position="inside">
                <filter
                    string="Booking Type"
                    name="resource_booking_type"
                    domain="[('product_variant_ids.resource_booking_type_id', 'not in', [False, None])]"
                    groups="resource_booking.group_user"
                />
            </search>
        </field>
    </record>
</data>

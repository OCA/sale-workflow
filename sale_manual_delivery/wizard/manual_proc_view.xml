<?xml version="1.0" encoding="UTF-8"?>
<odoo>

  <record id='manual_procurement_wizard_form' model='ir.ui.view'>
    <field name='manual_procurement_wizard_form'/>
    <field name='model'>manual.procurement</field>
    <field name='arch' type='xml'>

      <form string="Create Manually Procurements" name="manual_procurment_form">
        <sheet>
          <field name='date_planned'/>
          <field name='order_id'/>
          <field name='carrier_id'/>
          <field name='line_ids'>
            <tree>
              <field name='ordered_qty'/>
              <field name='remaining'/>
              <field name='product_qty'/>
            </tree>
          </field>
        </sheet>
        <footer>
          <button name='record_picking'
                  string='Create Picking'
                  class='btn-primary'
                  type='object'/>
        </footer>
      </form>

    </field>
  </record>

  <act_window id='action_wizard_manual_procurement'
              name='Manual Procurements'
              res_model='manual.procurement'
              view_mode='form'
              target='new'/>

  <record model="ir.values" id="sale_order_line_make_invoice">
    <field name="model_id" ref="sale.model_sale_order_line" />
    <field name="name">Manual Procurement</field>
    <field name="key2">client_action_multi</field>
    <field name="value" eval="'ir.actions.act_window,' + str(ref('action_wizard_manual_procurement'))" />
    <field name="key">action</field>
    <field name="model">sale.order</field>
  </record>

</odoo>

<?xml version="1.0"?>
<odoo>

    <record model="ir.ui.view" id="procurement_manual_form_view">
        <field name="name">procurement.form</field>
        <field name="model">procurement.order</field>
        <field name="inherit_id" ref="procurement.procurement_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='origin']" position="after">
                <field name="manual_delivery" readonly="1"/>
            </xpath>
        </field>
    </record>

    <record id="procurement_group_form_view_inherited" model="ir.ui.view">
        <field name="name">procurement.group.view.form.inherit.picking</field>
        <field name="model">procurement.group</field>
        <field name="inherit_id" ref="procurement.procurement_group_form_view"/>
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="date_planned" readonly="1"/>
            </field>
        </field>
    </record>

</odoo>

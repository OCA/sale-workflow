<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.pwa</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <div id="pwa_settings" position='inside'>
                <div class="col-12 col-lg-6 o_setting_box" id="pwa_settings_sale">
                    <div class="o_setting_left_pane">
                        <field name="pwa_sale_auto_confirm" />
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="pwa_sale_auto_confirm" />
                        <div class="text-muted" id="pwa_sale_auto_confirm">
                            Sale orders will be confirmed after synchronization
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>
</odoo>

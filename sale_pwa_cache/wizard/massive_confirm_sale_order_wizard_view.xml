<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- AGED PARTNER BALANCE -->
    <record id="massive_confirm_sale_order_wizard" model="ir.ui.view">
        <field name="name">Massive Confirm Sale Orders Wizard</field>
        <field name="model">massive.confirm.sale.order.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group name="Affected records">
                    <field name="order_ids">
                        <field name="name" />
                    </field>
                </group>
                <footer>
                    <button
                        name="button_confirm"
                        string="Confirm Orders"
                        type="object"
                        default_focus="1"
                        class="oe_highlight"
                    />
                    or
                    <button string="Cancel" class="oe_link" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
    <act_window
        id="action_massive_confirm_sale_order_wizard"
        name="Massive Confirm Sale Orders"
        res_model="massive.confirm.sale.order.wizard"
        view_mode="form"
        view_id="massive_confirm_sale_order_wizard"
        target="new"
    />
    <menuitem
        id="menu_server_action_confirm_sale_order"
        name="Massive confirm"
        action="action_massive_confirm_sale_order_wizard"
        parent="sale.sale_order_menu"
        groups="sales_team.group_sale_manager"
        sequence="999"
    />
</odoo>

<odoo>

    <record model="ir.ui.view" id="sale_order_form_view">
        <field name="name">sale.order.form (in sale_timesheet_project_manual)</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">

            <xpath
                expr="//button[@name='action_view_project_ids']"
                position="attributes"
            >
                <attribute
                    name="attrs"
                >{'invisible': [('project_ids', '=', [])]}</attribute>
            </xpath>

            <button name="action_confirm" position="before">
                <field name="action_project_manual_allowed" invisible="1" />
                <button
                    name="action_project_manual"
                    type="object"
                    string="Generate Project/Task"
                    attrs="{'invisible': [('action_project_manual_allowed', '=', False)]}"
                />
            </button>

        </field>
    </record>

</odoo>

<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="project_from_quotation_server_action" model="ir.actions.server">
        <field name="name">Create Quotation Project</field>
        <field name="model_id" ref="sale.model_sale_order" />
        <field name="binding_model_id" ref="sale.model_sale_order" />
        <field
            name="groups_id"
            eval="[(4, ref('project_from_quotation.group_project_from_quotation'))]"
        />
        <field name="state">code</field>
        <field name="code">
            action = records.create_project_from_quotation()
        </field>
    </record>

    <record id="view_order_form_inherit_project_quotation" model="ir.ui.view">
        <field name="name">sale.order.view.form.inherit.project.quotation</field>
        <field name="model">sale.order</field>
        <field
            name="inherit_id"
            ref="sale_project.view_order_form_inherit_sale_project"
        />
        <field name="arch" type="xml">
            <button name="action_view_project_ids" position="attributes">
                <attribute name="attrs">
                    {
                        'invisible': [
                            ('project_ids', '=', [])
                        ]
                    }
                </attribute>
            </button>
        </field>
    </record>

</odoo>

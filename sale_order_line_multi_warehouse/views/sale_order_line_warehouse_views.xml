<odoo>
    <record id="sale_order_line_warehouse_view" model="ir.ui.view">
        <field name="name">sale.order.line.warehouse.view</field>
        <field name="model">sale.order.line</field>
        <field name="priority">1000</field>
        <field name="arch" type="xml">
            <form string="Warehouse Lines">
                <field name="state" invisible="1" />
                <group>
                    <group>
                        <field name="product_id" readonly="1" />
                        <field name="product_uom_qty" readonly="1" />
                        <field name="product_uom" readonly="1" />
                    </group>
                    <group>
                        <field name="qty_assigned_to_warehouse" />
                    </group>
                </group>
                <field
                    name="sale_order_line_warehouse_ids"
                    attrs="{'readonly': [('state', 'in', ['cancel', 'done'])]}"
                >
                    <tree editable="bottom">
                        <field name="suitable_warehouse_ids" invisible="1" />
                        <field
                            name="warehouse_id"
                            options="{'no_create': True, 'no_open': True}"
                        />
                        <field name="product_uom_qty" />
                        <field name="product_uom_id" />
                        <field
                            name="qty_delivered"
                            attrs="{'column_invisible': [('parent.state', 'not in', ['sale', 'done'])]}"
                        />
                        <field
                            name="qty_forecast"
                            attrs="{'column_invisible': [('parent.state', 'in', ['sale', 'done'])]}"
                        />
                        <field
                            name="qty_forecast_uom_id"
                            attrs="{'column_invisible': [('parent.state', 'in', ['sale', 'done'])]}"
                        />
                    </tree>
                </field>
            </form>
        </field>
    </record>
</odoo>

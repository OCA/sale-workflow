<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_project_project_specific_form" model="ir.ui.view">
        <field name="name">project.project.specific.form</field>
        <field name="model">project.project</field>
        <field name="groups_id" eval="[(4, ref('project.group_project_manager'))]"/>
        <field name="inherit_id" ref="project.edit_project"/>
        <field name="arch" type="xml">

            <notebook position="inside">
                <page string="User task mapping" attrs="{'invisible': [('project_uses_task_sale_line_map', '=', False)]}">

                    <field name="project_uses_task_sale_line_map" invisible="True"/>

                    <field name="project_user_task_sale_line_map_ids">
                        <tree string="User task mapping" editable="bottom">
                            <field name="name"/>
                            <field name="user_id"/>
                            <field name="task_id"
                                   domain="[('project_id', '=', parent.id)]"/>
                            <field name="sale_line_id"
                                   domain="[('order_id.project_id.project_ids', 'in', parent.id), ('product_id.type', '=', 'service'), ('product_id.track_service', '=', 'user_profile'),]"/>
                        </tree>
                        <form>
                            <group>
                                <field name="name"/>
                                <field name="user_id"/>
                                <field name="task_id"/>
                                <field name="sale_line_id"/>
                            </group>
                        </form>
                    </field>

                </page>
            </notebook>

        </field>
    </record>

</odoo>

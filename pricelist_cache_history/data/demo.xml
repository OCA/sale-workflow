<odoo>

    <record id="list_with_dates" model="product.pricelist">
        <field name="name">Pricelist with dates</field>
    </record>

    <record id="item1" model="product.pricelist.item">
        <field name="product_id" ref="product.product_product_6" />
        <field name="pricelist_id" ref="list_with_dates" />
        <field name="applied_on">0_product_variant</field>
        <field name="date_start" eval="False" />
        <field name="date_end">2023-01-12</field>
        <field name="fixed_price">12.0</field>
    </record>

    <record id="item2" model="product.pricelist.item">
        <field name="product_id" ref="product.product_product_6" />
        <field name="pricelist_id" ref="list_with_dates" />
        <field name="applied_on">0_product_variant</field>
        <field name="date_start">2023-01-07</field>
        <field name="date_end">2023-01-17</field>
        <field name="fixed_price">10.0</field>
    </record>

    <record id="item3" model="product.pricelist.item">
        <field name="product_id" ref="product.product_product_6" />
        <field name="pricelist_id" ref="list_with_dates" />
        <field name="applied_on">0_product_variant</field>
        <field name="date_start">2023-01-02</field>
        <field name="date_end">2023-01-22</field>
        <field name="fixed_price">8.0</field>
    </record>

    <record id="item4" model="product.pricelist.item">
        <field name="product_id" ref="product.product_product_6" />
        <field name="pricelist_id" ref="list_with_dates" />
        <field name="applied_on">0_product_variant</field>
        <field name="date_start">2023-01-22</field>
        <field name="date_end" eval="False" />
        <field name="fixed_price">6.0</field>
    </record>


    <!--The list above never ends, and therefore is always active.
    This list is there to check how the base price is computed.-->

    <record id="list_with_ending_dates" model="product.pricelist">
        <field name="name">Pricelist with dates 2</field>
    </record>

    <record id="ending_item_january" model="product.pricelist.item">
        <field name="product_id" ref="product.product_product_6" />
        <field name="pricelist_id" ref="list_with_ending_dates" />
        <field name="applied_on">0_product_variant</field>
        <field name="date_start">2023-01-01</field>
        <field name="date_end">2023-01-31</field>
        <field name="fixed_price">6.0</field>
    </record>

    <record id="ending_item_march" model="product.pricelist.item">
        <field name="product_id" ref="product.product_product_6" />
        <field name="pricelist_id" ref="list_with_ending_dates" />
        <field name="applied_on">0_product_variant</field>
        <field name="date_start">2023-03-01</field>
        <field name="date_end">2023-03-31</field>
        <field name="fixed_price">6.0</field>
    </record>

    <!--This one is active 1 month but alters parent pricelist price.
    Altered prices has to be computed every time the parent's price changes-->

    <record id="list_with_formulas" model="product.pricelist">
        <field name="name">Pricelist with formulas</field>
    </record>

    <record id="item6" model="product.pricelist.item">
        <field name="product_id" ref="product.product_product_6" />
        <field name="pricelist_id" ref="list_with_formulas" />
        <field name="applied_on">0_product_variant</field>
        <field name="compute_price">formula</field>
        <field name="date_start">2023-01-01</field>
        <field name="date_end">2023-01-31</field>
        <field name="price_surcharge">20</field>
        <field name="base">pricelist</field>
        <field name="base_pricelist_id" ref="list_with_dates" />
    </record>

    <record id="never_ending_list_with_formulas" model="product.pricelist">
        <field name="name">Pricelist with formulas</field>
    </record>

    <record id="item7" model="product.pricelist.item">
        <field name="product_id" ref="product.product_product_6" />
        <field name="pricelist_id" ref="never_ending_list_with_formulas" />
        <field name="applied_on">0_product_variant</field>
        <field name="compute_price">formula</field>
        <field name="date_start" eval="False" />
        <field name="date_end" eval="False" />
        <field name="price_surcharge">20</field>
        <field name="base">pricelist</field>
        <field name="base_pricelist_id" ref="list_with_dates" />
    </record>


    <record id="factor_list_with_dates" model="product.pricelist">
        <field name="name">Factor list with dates</field>
    </record>

    <record id="factor_item_with_dates" model="product.pricelist.item">
        <field name="pricelist_id" ref="factor_list_with_dates" />
        <field name="applied_on">3_global</field>
        <field name="compute_price">formula</field>
        <field name="base">pricelist</field>
        <field name="base_pricelist_id" ref="list_with_dates" />
        <field name="price_surcharge">20</field>
    </record>
</odoo>

<openerp>
    <data>
        <!-- INHERITED VIEW FOR THE OBJECT : account_invoice -->


        <record id="invoice_form" model="ir.ui.view">
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form" />
            <field eval="100" name="priority"/>
            <field name="arch" type="xml">
                <field name="fiscal_position" position="replace">
                    <field name="fiscal_position" on_change="fiscal_position_id_change(fiscal_position, tax_inc, invoice_line, context)"/>
                    <group colspan="1" col="2">
                        <field name="tax_inc" on_change="tax_inc_change(fiscal_position, tax_inc, invoice_line)"/>
                    </group>
                </field>

                <field name="invoice_line" position="attributes">
                    <attribute name="context">{'tax_inc': tax_inc}</attribute>
                </field>
            </field>
        </record>

    </data>
</openerp>

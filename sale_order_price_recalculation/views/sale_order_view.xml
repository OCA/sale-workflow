<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="sorp_view_order_form" model="ir.ui.view">
        <field name="name">sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <xpath
                expr="//page[@name='order_lines']/group[@name='note_group']/group/field[@name='note']"
                position="after"
            >
            <!--<field name="note" position="after">-->
                <group name="sorp">
                    <div class="btn-group">
                        <button
                            name="recalculate_prices"
                            string="Recalculate prices"
                            attrs="{'invisible': [('state', 'not in', ['draft', 'sent'])]}"
                            type="object"
                            colspan="4"
                            class="ml-2 btn btn-primary"
                        />
                        <button
                            name="recalculate_names"
                            string="Reset descriptions"
                            attrs="{'invisible': [('state', 'not in', ['draft', 'sent'])]}"
                            type="object"
                            colspan="4"
                            class="ml-2 btn btn-primary"
                        />
                    </div>
                </group>
            </xpath>
        </field>
    </record>
</odoo>

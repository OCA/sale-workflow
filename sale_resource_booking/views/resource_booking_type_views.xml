<data>
    <record id="resource_booking_type_form" model="ir.ui.view">
        <field name="name">Sale order generator from booking type form</field>
        <field name="model">resource.booking.type</field>
        <field name="inherit_id" ref="resource_booking.resource_booking_type_form" />
        <field
            name="groups_id"
            eval="[(4, ref('sales_team.group_sale_salesman'), 0)]"
        />
        <field name="arch" type="xml">
            <header position='inside'>
                <button
                    name="action_sale_order_wizard"
                    string="Quote"
                    type="object"
                    help="Generate quotation."
                />
            </header>
        </field>
    </record>
</data>

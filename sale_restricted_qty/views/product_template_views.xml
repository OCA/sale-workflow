<odoo>

    <record id="view_product_template_form" model="ir.ui.view">
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view" />
        <field name="arch" type="xml">
            <group name="description" position="before">
                <group
                    name="sale_restricted_qty"
                    string="Sale Restricted Qty"
                    colspan="4"
                >
                    <group string="Min Qty">
                        <field name="is_sale_min_qty_set" invisible="1" />
                        <label for="sale_min_qty" string="Value" />
                        <div>
                            <field name="is_sale_own_min_qty_set" class="oe_inline" />
                            <span invisible="not is_sale_min_qty_set">
                                <field
                                    name="sale_min_qty"
                                    class="oe_inline"
                                    readonly="not is_sale_own_min_qty_set"
                                    required="is_sale_own_min_qty_set"
                                />
                                <span
                                    class="o_form_label oe_inline fst-italic text-muted"
                                    invisible="is_sale_own_min_qty_set"
                                > (inherited)</span>
                            </span>
                        </div>

                        <field name="is_sale_restrict_min_qty_set" invisible="1" />
                        <label for="sale_restrict_min_qty" string="Restrict" />
                        <div>
                            <field
                                name="is_sale_own_restrict_min_qty_set"
                                class="oe_inline"
                            />
                            <span invisible="not is_sale_restrict_min_qty_set">
                                <field
                                    name="sale_restrict_min_qty"
                                    class="oe_inline"
                                    readonly="not is_sale_own_restrict_min_qty_set"
                                    required="is_sale_own_restrict_min_qty_set"
                                />
                                <span
                                    class="o_form_label oe_inline fst-italic text-muted"
                                    invisible="is_sale_own_restrict_min_qty_set"
                                > (inherited)</span>
                            </span>
                        </div>
                    </group>

                    <group string="Max Qty">
                        <field name="is_sale_max_qty_set" invisible="1" />
                        <label for="sale_max_qty" string="Value" />
                        <div>
                            <field name="is_sale_own_max_qty_set" class="oe_inline" />
                            <span invisible="not is_sale_max_qty_set">
                                <field
                                    name="sale_max_qty"
                                    class="oe_inline"
                                    readonly="not is_sale_own_max_qty_set"
                                    required="is_sale_own_max_qty_set"
                                />
                                <span
                                    class="o_form_label oe_inline fst-italic text-muted"
                                    invisible="is_sale_own_max_qty_set"
                                > (inherited)</span>
                            </span>
                        </div>

                        <field name="is_sale_restrict_max_qty_set" invisible="1" />
                        <label for="sale_restrict_max_qty" string="Restrict" />
                        <div>
                            <field
                                name="is_sale_own_restrict_max_qty_set"
                                class="oe_inline"
                            />
                            <span invisible="not is_sale_restrict_max_qty_set">
                                <field
                                    name="sale_restrict_max_qty"
                                    class="oe_inline"
                                    readonly="not is_sale_own_restrict_max_qty_set"
                                    required="is_sale_own_restrict_max_qty_set"
                                />
                                <span
                                    class="o_form_label oe_inline fst-italic text-muted"
                                    invisible="is_sale_own_restrict_max_qty_set"
                                > (inherited)</span>
                            </span>
                        </div>
                    </group>

                    <group string="Multiple-Of Qty">
                        <field name="is_sale_multiple_of_qty_set" invisible="1" />
                        <label for="sale_multiple_of_qty" string="Value" />
                        <div>
                            <field
                                name="is_sale_own_multiple_of_qty_set"
                                class="oe_inline"
                            />
                            <span invisible="not is_sale_multiple_of_qty_set">
                                <field
                                    name="sale_multiple_of_qty"
                                    class="oe_inline"
                                    readonly="not is_sale_own_multiple_of_qty_set"
                                    required="is_sale_own_multiple_of_qty_set"
                                />
                                <span
                                    class="o_form_label oe_inline fst-italic text-muted"
                                    invisible="is_sale_own_multiple_of_qty_set"
                                > (inherited)</span>
                            </span>
                        </div>

                        <field
                            name="is_sale_restrict_multiple_of_qty_set"
                            invisible="1"
                        />
                        <label for="sale_restrict_multiple_of_qty" string="Restrict" />
                        <div>
                            <field
                                name="is_sale_own_restrict_multiple_of_qty_set"
                                class="oe_inline"
                            />
                            <span invisible="not is_sale_restrict_multiple_of_qty_set">
                                <field
                                    name="sale_restrict_multiple_of_qty"
                                    class="oe_inline"
                                    readonly="not is_sale_own_restrict_multiple_of_qty_set"
                                    required="is_sale_own_restrict_multiple_of_qty_set"
                                />
                                <span
                                    class="o_form_label oe_inline fst-italic text-muted"
                                    invisible="is_sale_own_restrict_multiple_of_qty_set"
                                > (inherited)</span>
                            </span>
                        </div>
                    </group>
                </group>
            </group>
        </field>
    </record>

</odoo>

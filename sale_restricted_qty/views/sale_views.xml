<odoo>
    <record id="view_order_form" model="ir.ui.view">
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <xpath
                expr="//field[@name='order_line']/form//field[@name='product_uom_readonly']"
                position="after"
            >
                <field name="sale_min_qty" />
                <field name="sale_multiple_qty" />
                <field name="sale_max_qty" />
            </xpath>
            <xpath
                expr="//field[@name='order_line']/form//field[@name='product_uom_readonly']"
                position="before"
            >
                <div style="color:red; font-weight:bold;">
                    <field
                        name="display_warning_message_qty"
                        nolabel="1"
                        readonly="1"
                    />
                </div>
            </xpath>
           <xpath
                expr="//field[@name='order_line']/tree/field[@name='product_uom_qty']"
                position="after"
            >
               <field name="sale_min_qty" />
               <field name="sale_max_qty" />
               <field name="display_option_ids_danger" invisible="1" />
               <field name="display_option_ids_warning" invisible="1" />
           </xpath>

            <xpath expr="//field[@name='order_line']/tree" position="attributes">>
                <attribute
                    name="decoration-danger"
                >display_option_ids_danger</attribute>
                <attribute
                    name="decoration-warning"
                >display_option_ids_warning</attribute>
            </xpath>
        </field>
    </record>
</odoo>

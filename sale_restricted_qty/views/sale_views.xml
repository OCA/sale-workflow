<odoo>
    <record id="view_order_form" model="ir.ui.view">
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <xpath
                expr="//field[@name='order_line']/form//field[@name='product_uom_readonly']"
                position="after"
            >
                <field
                    name="sale_min_qty"
                    attributes="{'invisible': [('sale_min_qty', '=', 0)]}"
                />
                <field
                    name="sale_multiple_qty"
                    attributes="{'invisible': [('sale_multiple_qty', '=', 0)]}"
                />
                <field
                    name="sale_max_qty"
                    attributes="{'invisible': [('sale_max_qty', '=', 0)]}"
                />
                <field
                    name="qty_warning_message"
                    string=""
                    readonly="1"
                    style="color:red; font-weight:bold;"
                    attributes="{'invisible': [('qty_warning_message', '=', False)]}"
                />
           </xpath>
           <xpath
                expr="//field[@name='order_line']/tree/field[@name='product_uom_qty']"
                position="after"
            >
               <field name="sale_min_qty" />
               <field name="sale_max_qty" />
               <field name="qty_warning_message" string=" " />
               <field name="qty_invalid" invisible="1" />
           </xpath>

            <xpath expr="//field[@name='order_line']/tree" position="attributes">
                <attribute name="decoration-danger">qty_invalid</attribute>
                <attribute
                    name="decoration-warning"
                >qty_warning_message and not qty_invalid</attribute>
            </xpath>
        </field>
    </record>

    <record id="view_order_tree" model="ir.ui.view">
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_tree" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='state']" position="after">
                <field name="qty_invalid" invisible="1" />
            </xpath>
        </field>
    </record>

    <record id="view_sales_order_filter" model="ir.ui.view">
       <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_sales_order_filter" />
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='my_sale_orders_filter']" position="after">
                <filter
                    name="filter_invalid_qty_restrictions"
                    string="Invalid quantities"
                    domain="[('qty_invalid', '=', True)]"
                />
            </xpath>
        </field>
    </record>
</odoo>

<odoo>
    <record id="view_order_form" model="ir.ui.view">
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <xpath
                expr="//field[@name='order_line']/form//field[@name='product_uom_readonly']"
                position="after"
            >
                <field name="sale_min_qty" />
                <field name="sale_multiple_qty" />
                <field name="sale_max_qty" />
            </xpath>
            <xpath
                expr="//field[@name='order_line']/form//field[@name='product_uom_readonly']"
                position="before"
            >
                <div style="color:red; font-weight:bold;">
                    <field name="qty_warning_message" nolabel="1" readonly="1" />
                </div>
            </xpath>
           <xpath
                expr="//field[@name='order_line']/tree/field[@name='product_uom_qty']"
                position="after"
            >
               <field name="sale_min_qty" />
               <field name="sale_max_qty" />
               <field name="qty_warning_message" string=" " />
               <button
                    name="button_refresh_restriction_qty"
                    string="Refresh restrictions"
                    type="object"
                    attrs="{'invisible': [('qty_warning_message', '=', '')]}"
                />
               <field name="qty_invalid" invisible="1" />
           </xpath>

            <xpath expr="//field[@name='order_line']/tree" position="attributes">
                <attribute name="decoration-danger">qty_invalid</attribute>
                <attribute
                    name="decoration-warning"
                >qty_warning_message and not qty_invalid</attribute>
            </xpath>
        </field>
    </record>
</odoo>

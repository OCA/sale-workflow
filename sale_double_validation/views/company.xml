<?xml version="1.0" ?>
<openerp>
  <data>

    <record id="view_company_form" model="ir.ui.view">
      <field name="model">res.company</field>
      <field name="inherit_id" ref="sale.view_company_inherit_form2"/>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='sale_note']" position="before">
          <field name="so_double_validation" widget="radio"/>
          <field name="so_double_validation_amount" attrs="{'invisible': [('so_double_validation', '=', 'one_step')]}"/>
        </xpath>
      </field>
    </record>

  </data>
</openerp>

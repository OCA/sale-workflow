<openerp>
    <data>
        <record id="new_credit_note_view" model="ir.ui.view">
            <field name="name">New Credit Note</field>
            <field name="model">sale.new.credit.note</field>
            <field name="arch" type="xml">
                <form string="New credit note" version="7.0">
                    <p class="oe_grey">
                        Set the amount of the credit note linked to the refund.
                    </p>
                    <group>
                        <field name="credit_amount" class="oe_inline"/>
                    </group>
                    <footer>
                        <button name="new_credit_note" type="object"
                            string="New credit note" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

         <record id="action_credit_note" model="ir.actions.act_window">
            <field name="name">New credit note</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sale.new.credit.note</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

    </data>
</openerp>

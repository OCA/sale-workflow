<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record
        id="res_config_settings_view_form_inherit_partial_confirm"
        model="ir.ui.view"
    >
        <field name="name">res.config.settings.view.form.inherit.partial.confirm</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sale.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <div name="quotation_order_setting_container" position="inside">
                <div
                    class="col-12 col-lg-6 o_setting_box"
                    id="partial_confirmation_setting"
                >
                    <div class="o_setting_left_pane">
                        <field name="sale_order_confirm_partial_enabled" />
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="sale_order_confirm_partial_enabled" />
                        <div class="text-muted">
                            Enables opportunity to confirm selected quotation lines only
                        </div>
                        <div
                            class="content-group"
                            attrs="{'invisible': [('sale_order_confirm_partial_enabled', '=', False)]}"
                        >
                            <div class="mt16">
                                <field
                                    name="so_confirm_partial_save_unconfirmed"
                                    class="oe_inline"
                                />
                                <label for="so_confirm_partial_save_unconfirmed" />
                            </div>
                            <div
                                class="mt16"
                                attrs="{'invisible': [('so_confirm_partial_save_unconfirmed', '=', False)]}"
                            >
                                <label for="so_confirm_partial_unconfirmed_suffix" />
                                <field
                                    name="so_confirm_partial_unconfirmed_suffix"
                                    class="oe_inline"
                                />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>

</odoo>

<odoo>
    <record id="purchase_order_line_inherit_form" model="ir.ui.view">
        <field name="name">purchase_order_line_form_view_inherit</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form" />
        <field name="arch" type="xml">
            <xpath
                expr="//field[@name='order_line']//tree/field[@name='name']"
                position="after"
            >
                <button
                    attrs="{'invisible':['|',('approved_purchase','=',True),('state','in',('purchase','done','cancel'))]}"
                    class="fa fa-exclamation-triangle"
                    title="Product has been marked as not purchasable."
                />
                <field invisible="1" name="approved_purchase" />
            </xpath>
            <div name="button_box" position="after">
                <field invisible="1" name="exceptions_purchase_approval" />
                <div
                    attrs="{'invisible':['|',('exceptions_purchase_approval','=',False),('state','in',('purchase','done','cancel'))]}"
                    class="alert alert-warning text-center"
                    role="alert"
                >Exception: A product on this purchase order has been marked as not purchasable.</div>
            </div>
            <field name="user_id" position="after">
                <field
                    name="override_exception"
                    groups="sales_team.group_sale_manager"
                />
            </field>
        </field>
    </record>
</odoo>

          <field name='company_currency_id' invisible="True"/>
          <field
            name="amount_total_curr"
            sum="Total"
            string="Total (Company Currency)"
            widget="monetary"
            options="{'currency_field': 'company_currency_id'}"
          />
        </field>

      </field>
    </record>

    <!-- Quotation -->

<odoo>
    <data>

        <record id="view_sales_config_sale_add_variants" model="ir.ui.view">
            <field name="name">sale settings: Add Variants</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('settings')]/div/div/div[9]" position="after">
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="group_sale_add_variants"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="group_sale_add_variants"/>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

    </data>
</odoo>

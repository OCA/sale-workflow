<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record model="ir.ui.view" id="sale_add_variants_form">
            <field name="name">sale.add.variants.form</field>
            <field name="model">sale.add.variants</field>
            <field name="arch" type="xml">
                <form string="Add Variants" version="7.0">
                    <field name="state" invisible="1"/>
                    <group>
                        <field name="product_tmpl_id" attrs="{'readonly': [('state', '!=', 'init')]}"
                            domain="[('attribute_line_ids', '!=', False)]"
                            options="{'no_create': True}"/>
                    </group>
                    <group colspan="4" attrs="{'invisible': [('state', '!=', 'select_variants')]}">
                        <field name="variant_line_ids" mode="tree" nolabel="1">
                            <tree string="Variants" editable="top">
                                <field name="product_id"/>
                                <field name="quantity"/>
                            </tree>
                        </field>
                    </group>
                    <footer>
                        <button name="load_variants"
                            type="object" states="init" string="Load Variants"
                            class="oe_highlight"/>
                        <button name="add_to_order"
                            type="object" states="select_variants"
                            string="Add to order"
                            class="oe_highlight"/>
                        <button name="add_to_order_continue"
                            type="object" states="select_variants"
                            string="Add to order and add more"/>
                        <button name="return_to_selection"
                            type="object" states="select_variants"
                            string="Cancel and select other template"/>
                    </footer>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_sale_add_variants">
            <field name="name">Add variants</field>
            <field name="res_model">sale.add.variants</field>
            <field name="view_mode">form</field>
            <field name="view_type">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="sale_add_variants_form"/>
        </record>

    </data>
</openerp>
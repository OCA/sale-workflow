<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="view_order_form" model="ir.ui.view">
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='amount_untaxed']" position="before">
                <field
                    name="global_discount_amount"
                    widget="monetary"
                    options="{'currency_field': 'currency_id'}"
                    attrs="{'readonly': [('state', '!=', 'draft')], 'invisible': [('amount_total', '=', 0)]}"
                />
            </xpath>
            <xpath
                expr="//field[@name='order_line']/tree/field[@name='sequence']"
                position="after"
            >
                <field name="is_discount_line" invisible="1" />
            </xpath>
            <xpath
                expr="//field[@name='order_line']/tree/field[@name='product_id']"
                position="attributes"
            >
                <attribute
                    name="attrs"
                >{'readonly': [('is_discount_line', '=', True)]}</attribute>
            </xpath>
            <xpath
                expr="//field[@name='order_line']/tree/field[@name='name']"
                position="attributes"
            >
                <attribute
                    name="attrs"
                >{'readonly': [('is_discount_line', '=', True)]}</attribute>
            </xpath>
            <xpath
                expr="//field[@name='order_line']/tree/field[@name='product_uom_qty']"
                position="attributes"
            >
                <attribute
                    name="attrs"
                >{'readonly': [('is_discount_line', '=', True)]}</attribute>
            </xpath>
            <xpath
                expr="//field[@name='order_line']/tree/field[@name='price_unit']"
                position="attributes"
            >
                <attribute
                    name="attrs"
                >{'readonly': [('is_discount_line', '=', True)]}</attribute>
            </xpath>
            <xpath
                expr="//field[@name='order_line']/tree/field[@name='tax_id']"
                position="attributes"
            >
                <attribute
                    name="attrs"
                >{'readonly': [('is_discount_line', '=', True)]}</attribute>
            </xpath>
            <xpath
                expr="//field[@name='order_line']/tree/field[@name='discount']"
                position="attributes"
            >
                <attribute
                    name="attrs"
                >{'readonly': [('is_discount_line', '=', True)]}</attribute>
            </xpath>
        </field>
    </record>

</odoo>

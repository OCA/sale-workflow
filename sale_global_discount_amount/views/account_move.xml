<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="view_move_form" model="ir.ui.view">
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account_global_discount_amount.view_move_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='global_discount_amount']" position="after">
                <field name="global_discount_amount_readonly" invisible="1" />
            </xpath>
            <xpath expr="//field[@name='global_discount_amount']" position="attributes">
                <attribute
                    name="attrs"
                >{'readonly': ['|', ('state', '!=', 'draft'), ('global_discount_amount_readonly', '=', True)]}</attribute>
            </xpath>
        </field>
    </record>

</odoo>

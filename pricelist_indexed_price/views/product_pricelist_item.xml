<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="product_pricelist_item_form_view" model="ir.ui.view">
            <field name="model">product.pricelist.item</field>
            <field name="inherit_id" ref="product.product_pricelist_item_form_view" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='base_pricelist_id']/parent::group" position="after">
                    <group name="index" attrs="{'invisible': [('compute_price', '!=', 'index')]}">
                        <field
                            name="index_pricelist_id"
                            attrs="{'required': [('compute_price', '=', 'index')]}"
                            context="{
                                'form_view_ref': %(view_product_pricelist_form)d,
                                'tree_view_ref': %(view_product_pricelist_tree)d,
                                'default_is_index': True,
                            }"
                        />
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</openerp>

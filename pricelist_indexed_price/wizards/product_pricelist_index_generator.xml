<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="view_product_pricelist_index_generator_form" model="ir.ui.view">
            <field name="model">product.pricelist.index.generator</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="date_start" />
                        <field name="date_end" />
                        <field name="frequency" />
                        <field name="index_start" />
                        <field name="index_step" />
                    </group>
                    <footer>
                        <button type="object" name="action_generate" class="btn-primary" string="Generate" />
                        <button special="cancel" string="Cancel" class="btn-default" />
                    </footer>
                </form>
            </field>
        </record>
        <act_window
            id="action_product_pricelist_index_generator"
            src_model="product.pricelist"
            res_model="product.pricelist.index.generator"
            name="Generate indexes"
            multi="False"
            target="new"
            view_mode="form"
            view_id="view_product_pricelist_index_generator_form"
        />
    </data>
</openerp>

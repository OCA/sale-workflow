<odoo>

    <record id="product_template_form_view_inherit_mrp" model="ir.ui.view">
        <field name="name">product_template_form_view_inherit_mrp</field>
        <field name="model">product.template</field>
        <field name="priority">101</field>
        <field name="inherit_id" ref="product.product_template_form_view" />
        <field name="arch" type="xml">
            <div name="options" position="inside">
                <div>
                    <span class="d-inline-block">
                        <field name="mrp_ok" />
                        <label for="mrp_ok" />
                    </span>
                    <span class="d-inline-block">
                        <field name="mrp_component_ok" />
                        <label for="mrp_component_ok" />
                    </span>
                    <span class="d-inline-block">
                        <field name="bom_ok" />
                        <label for="bom_ok" />
                    </span>
                </div>
            </div>
            <group name="candidate_fields" position="inside">
                <group>
                    <separator string="Manufacturing" />
                    <field
                        name="candidate_manufacture"
                        readonly="not can_edit_candidate"
                    />
                    <field
                        name="candidate_component_manufacture"
                        readonly="not can_edit_candidate"
                    />
                    <field
                        name="candidate_bom"
                        readonly="not can_edit_candidate"
                    />
                </group>
            </group>
        </field>
    </record>

</odoo>

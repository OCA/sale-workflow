<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field
            name="name"
        >res.config.settings.form (in sale_order_option_product_group)</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sale.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <div id="proforma_configuration" position="after">
                <div class="col-12 col-lg-6 o_setting_box" id="sale_optional_product">
                    <div class="o_setting_left_pane">
                        <field name="group_option_product" />
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="group_option_product" />
                        <div class="text-muted">
                            Allows you to add optional products in Sale Orders
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>
</odoo>

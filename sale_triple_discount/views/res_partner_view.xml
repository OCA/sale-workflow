<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_partner_form" model="ir.ui.view">
        <field name="name">partner.triple.discount.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='user_id']" position="after">
                <field name="default_discount1" groups="sale.group_discount_per_so_line"/>
                <field name="default_discount2" groups="sale.group_discount_per_so_line"/>
                <field name="default_discount3" groups="sale.group_discount_per_so_line"/>
            </xpath>
        </field>
    </record>

</odoo>

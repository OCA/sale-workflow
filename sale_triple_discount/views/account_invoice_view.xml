<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="invoice_triple_discount_form_view" model="ir.ui.view">
        <field name="name">account.invoice.triple.discount.form</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_form"/>
        <field name="arch" type="xml">
          <xpath expr="//field[@name='invoice_line_ids']" position="attributes">
                <attribute name="context">{'partner_id': partner_id}</attribute>
          </xpath>
            <xpath expr="//field[@name='invoice_line_ids']//tree//field[@name='discount']" position="attributes">
                <attribute name="readonly">True</attribute>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']//tree//field[@name='discount']" position="before">
                <field name="discount1" groups="sale.group_discount_per_so_line"/>
                <field name="discount2" groups="sale.group_discount_per_so_line"/>
                <field name="discount3" groups="sale.group_discount_per_so_line"/>
            </xpath>
        </field>
    </record>

    <record id="invoice_line_triple_discount_form_view" model="ir.ui.view">
       <field name="name">account.invoice.line.triple.discount.form</field>
       <field name="model">account.invoice.line</field>
       <field name="inherit_id" ref="account.view_invoice_line_form"/>
       <field name="arch" type="xml">
           <xpath expr="//field[@name='discount']" position="before">
               <field name="discount1" groups="sale.group_discount_per_so_line"/>
               <field name="discount2" groups="sale.group_discount_per_so_line"/>
               <field name="discount3" groups="sale.group_discount_per_so_line"/>
           </xpath>
       </field>
    </record>

</odoo>

<odoo>
    <record id="view_order_form" model="ir.ui.view">
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <xpath
                expr="//form/sheet/notebook/page[@name='order_lines']/field/tree/field[@name='product_uom_qty']"
                position="after"
            >
                <field name="quantity_updatable" invisible="1" />
            </xpath>
            <xpath
                expr="//form/sheet/notebook/page[@name='order_lines']/field/tree/field[@name='product_uom_qty']"
                position="attributes"
            >
                <attribute
                    name="attrs"
                    operation="update"
                >{'readonly': [('quantity_updatable', '=',
                    False)]}</attribute>
            </xpath>
            <xpath
                expr="//form/sheet/notebook/page[@name='order_lines']/field/tree/field[@name='product_packaging_id']"
                position="attributes"
            >
                <attribute
                    name="attrs"
                    operation="update"
                >{'readonly': [('quantity_updatable', '=',
                    False)]}</attribute>
            </xpath>
            <xpath
                expr="//form/sheet/notebook/page[@name='order_lines']/field/tree/field[@name='product_packaging_qty']"
                position="attributes"
            >
                <attribute
                    name="attrs"
                    operation="update"
                >{'readonly': [('quantity_updatable', '=',
                    False)]}</attribute>
            </xpath>

        </field>
    </record>
</odoo>

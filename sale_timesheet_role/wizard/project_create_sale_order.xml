    <record id="project_create_sale_order_view_form" model="ir.ui.view">
        <field name="name">project.create.sale.order.wizard.form</field>
        <field name="model">project.create.sale.order</field>
        <field name="inherit_id" ref="sale_timesheet_enhanced.project_create_sale_order_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='line_ids']/.." position="after">
                <group attrs="{'invisible': [('billable_type', '!=', 'employee_role_rate')]}">
                    <field name="employee_role_ids" nolabel="1" attrs="{'required': [('billable_type', '=', 'employee_role_rate')]}">
                        <tree editable="bottom">
                            <field name="employee_id" options="{'no_create_edit': True, 'no_create': True}" attrs="{'required': [('role_id', '=', False)]}"/>
                            <field name="role_id" options="{'no_create_edit': True, 'no_create': True}" attrs="{'required': [('employee_id', '=', False)]}"/>
                            <field name="product_id" options="{'no_create_edit': True, 'no_create': True}"/>
                            <field name="price_unit" widget='monetary' options="{'currency_field': 'currency_id', 'field_digits': True}"/>
                            <field name="currency_id" invisible="1"/>
                        </tree>
                    </field>
                </group>
            </xpath>
        </field>
    </record>

</odoo>

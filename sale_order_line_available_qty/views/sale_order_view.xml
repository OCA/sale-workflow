<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>
    <record id="view_order_form" model="ir.ui.view">
      <field name="name">sale.order.form</field>
      <field name="model">sale.order</field>
      <field name="inherit_id" ref="sale.view_order_form" />
      <field name="arch" type="xml">
        <xpath expr="//field[@name='order_line']//tree[@string='Sales Order Lines']//field[@name='name']"
          position="after">
          <field name="standard_price"/>
          <field name="qty_available"/>
        </xpath>

        <xpath expr="//field[@name='order_line']//tree[@string='Sales Order Lines']"
          position="attributes">
          <attribute name="colors">red: product_id and qty_available - product_uom_qty &lt; 0;</attribute>
        </xpath>
      </field>
    </record>
  </data>
</openerp>

<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="report_simple_barcode">
        <div style="width: 32%; display: inline-table; height: 10rem;">
            <table class="table table-bordered mb-0" style="border: 2px solid black;">
                <tr>
                    <th class="table-active text-left" style="height: 4rem;">
                        <strong t-field="product_set.display_name"/>
                    </th>
                </tr>
                <tr>
                    <td class="text-center align-middle" style="height: 6rem;">
                        <t t-if="product_set.barcode">
                            <img alt="Barcode" t-if="len(product_set.barcode) == 13" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('EAN13', quote_plus(product_set.barcode or ''), 600, 150)" style="width:100%;height:4rem;"/>
                            <img alt="Barcode" t-elif="len(product_set.barcode) == 8" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('EAN8', quote_plus(product_set.barcode or ''), 600, 150)" style="width:100%;height:4rem;"/>
                            <img alt="Barcode" t-else="" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', quote_plus(product_set.barcode or ''), 600, 150)" style="width:100%;height:4rem"/>
                            <span t-field="product_set.barcode"/>
                        </t>
                        <t t-else=""><span class="text-muted">No barcode available</span></t>
                    </td>
                </tr>
            </table>
        </div>
    </template>
    <template id="report_productsetbarcode">
        <t t-call="web.basic_layout">
            <div class="page">
                <t t-foreach="docs" t-as="product_set">
                    <t t-call="sale_product_set.report_simple_barcode">
                        <t t-set="product_set" t-value="product_set"/>
                    </t>
                </t>
            </div>
        </t>
    </template>
</odoo>

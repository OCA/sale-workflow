<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form" model="ir.ui.view">
        <field name="name">view.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="/form/header" position="replace">
                <header name="sale_order" attrs="{'invisible': [('order_type','=','quotation')]}">
                    <button name="%(sale.action_view_sale_advance_payment_inv)d" string="Create Invoice"
                        type="action" class="btn-primary"
                        attrs="{'invisible': [('invoice_status', '!=', 'to invoice')]}"/>
                    <button name="%(sale.action_view_sale_advance_payment_inv)d" string="Create Invoice"
                        type="action" context="{'default_advance_payment_method': 'percentage'}"
                        attrs="{'invisible': ['|',('invoice_status', '!=', 'no'), ('state', '!=', 'sale')]}"/>
                    <button name="action_quotation_send" string="Send by Email" type="object" states="draft" class="btn-primary"/>
                    <button name="print_quotation" string="Print" type="object" states="draft" class="btn-primary"/>
                    <button name="action_confirm" states="sent" string="Confirm Sale" class="btn-primary o_sale_confirm" type="object" />
                    <button name="action_confirm" states="draft" string="Confirm Sale" class="o_sale_confirm" type="object" />
                    <button name="print_quotation" string="Print" type="object" states="sent,sale"/>
                    <button name="action_quotation_send" string="Send by Email" type="object" states="sent,sale"/>
                    <button name="action_cancel" states="draft,sent,sale" type="object" string="Cancel"/>
                    <button name="action_draft" states="cancel" type="object" string="Set to Quotation"/>
                    <button name="action_done" type="object" string="Lock" states="sale"
                        help="If the sale is locked, you can not modify it anymore. However, you will still be able to invoice or deliver."/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,sent,sale"/>
                </header>
                <header name="quotation" attrs="{'invisible': [('order_type','=','sale_order')]}">
	            	<button name="action_button_convert_to_order" states="draft"
	            			class="oe_highlight" type="object" string="Convert to Order" groups="base.group_user"/>
                    <button name="cancel" states="draft" string="Cancel Quotation" groups="base.group_user"/>
                    <field name="state2" widget="statusbar" statusbar_visible="draft,done" invisible="context.get('order_type', 'sale_order') == 'sale_order'"/>
                </header>
            </xpath>
            <field name="partner_shipping_id" position="after">
                <field name="order_type"/>
                <field name="quote_id" attrs="{'invisible': [('order_type','=','quotation')]}"
                	context="{'order_type': 'quotation'}"/>
                <field name="order_id" attrs="{'invisible': [('order_type','=','sale_order')]}"
               		context="{'order_type': 'sale_order'}"/>
            </field>
            <xpath expr="/form/sheet/notebook/page/field[@name='order_line']" position="attributes">
            	<attribute name="context">{'order_type': order_type}</attribute>
            </xpath>
        </field>
    </record>

    <!-- Split Quotation -->
    <record id="sale.action_quotations" model="ir.actions.act_window">
        <field name="context">{'hide_sale': True, 'order_type': 'quotation', }
        </field>
        <field name="domain">[('order_type', '=', 'quotation')]</field>
    </record>
    <record id="sale.action_orders" model="ir.actions.act_window">
        <field name="context">{'order_type': 'sale_order', }
        </field>
        <field name="domain">[('order_type', '=', 'sale_order')]</field>
    </record>
</odoo>

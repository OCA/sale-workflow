<odoo>
    <record model="ir.ui.view" id="sale_order_form_view">
        <field name="name">sale.order.form (in abi_sale_stock_update_route)</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <button name="action_draft" position="after">
                <button
                    name="%(sale_order_line_amend_route_act_window)d"
                    string="Update routes"
                    type="action"
                    class="btn-primary"
                    attrs="{'invisible': [('state', '!=', 'sale')]}"
                    groups="sale_route_amendment.group_sale_route_amendment"
                />
            </button>
        </field>
    </record>
    <record model="ir.ui.view" id="view_order_form_inherit_sale_stock">
        <field
            name="name"
        >sale.order.form stock (in abi_sale_stock_update_route)</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale_stock.view_order_form_inherit_sale_stock" />
        <field name="arch" type="xml">
            <field name="route_id" position="attributes">
                <attribute
                    name="attrs"
                >{'readonly': [('state', '!=', 'draft')]}</attribute>
            </field>
        </field>
    </record>
</odoo>

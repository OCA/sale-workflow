<odoo>

    <record model="ir.ui.view" id="product_template_form_view">
        <field name="name">product.template.form (in sale_product_country_filter)</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='sales']/group[@name='sale']" position="inside">
                <group name="blacklist" string="Blacklisted countries">
                    <field name="tmpl_globally_allowed"/>
                    <field
                        name="tmpl_blacklisted_countries_ids"
                        nolabel="1"
                        attrs="{'readonly': [('tmpl_globally_allowed', '=', True)],
                                'required': [('tmpl_globally_allowed', '!=', True)]}"/>
                </group>
            </xpath>
        </field>
    </record>


<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sales_config" model="ir.ui.view">
        <field name="name">sale settings</field>
        <field name="model">sale.config.settings</field>
        <field name="inherit_id" ref="sales_team.view_sale_config_settings"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='deposit_product_id_setting']/parent::group" position="inside">
                <label string="Country Filter"/>
                <div>
                    <field name="product_blacklist_global_mandatory" class="oe_inline" />
                    <label for="product_blacklist_global_mandatory"/>
                </div>
            </xpath>
        </field>
    </record>
</odoo>

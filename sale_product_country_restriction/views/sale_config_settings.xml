<odoo>
    <record id="view_sale_config_settings" model="ir.ui.view">
        <field name="name">crm settings</field>
        <field name="model">sale.config.settings</field>
        <field name="inherit_id" ref="sale.view_sales_config"/>
        <field name="arch" type="xml">
            <group name="customers" position="inside">
                <field name="enable_sale_country_restriction"/>
                <field name="default_country_restriction_id"
                       attrs="{'invisible': [('enable_sale_country_restriction', '=', False)]}"/>
                <field name="country_restriction_strategy"
                       attrs="{'invisible': [('enable_sale_country_restriction', '=', False)]}"/>
            </group>
        </field>
    </record>
</odoo>

<odoo>

    <record model="ir.ui.view" id="sale_order_form_view">
        <field name="name">sale.order.form (in sale_order_end_user)</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <field name="partner_shipping_id" position="after">
                <field name="end_user_id" context="{'default_type': 'end_user'}"/>
            </field>
        </field>
    </record>

    <record model="ir.ui.view" id="sale_order_search_view">
        <field name="name">sale.order.search (in sale_order_end_user)</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_sales_order_filter"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="end_user_id"/>
            </field>
        </field>
    </record>


</odoo>

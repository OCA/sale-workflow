<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sale_order_line_view_form_readonly" model="ir.ui.view">
        <field name="model">sale.order.line</field>
        <field name="inherit_id" ref="sale.sale_order_line_view_form_readonly"/>
        <field name="arch" type="xml">
            <xpath expr="//group" position="before">
                <group>
                    <field name="secondary_uom_id" invisible="1" />
                    <field name="secondary_uom_qty" invisible="1" />
                    <field name="secondary_uom_factor" invisible="1" />
                    <field name="secondary_uom_rounding" invisible="1" />
                    <!-- <field name="secondary_uom_product_variant_ids" invisible="1" /> -->
                    <field name="product_uom_factor" invisible="1" />
                    <field name="product_uom_rounding" invisible="1" />
                    <field name="has_secondary_uom" invisible="1" />
                </group>
            </xpath>
        </field>
    </record>


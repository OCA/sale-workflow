<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate="0">

        <!-- res.partner -->
        <record model="res.partner" id="base.akretion_customer">
            <field name="name">AKRETION</field>
            <field name="is_company" eval="True"/>
            <field name="street">35B Rue Montgolfier</field>
            <field name="zip">69100</field>
            <field name="city">Villeurbanne</field>
            <field name="country_id" ref="base.fr"/>
            <field name="website">http://www.akretion.com</field>
            <field name="email">contact@akretion.com</field>
            <field name="customer" eval="True"/>
            <field name="supplier" eval="False"/>
            <field name="active" eval="True"/>
        </record>

        <!-- crm.case.section -->
        <record model="crm.case.section" id="crm_case_section_invoice_partner">
            <field name="name">With Invoice Partner</field>
            <field name="section_partner_invoice_id" ref="base.akretion_customer"/>
            <field name="code">IP</field>
            <field name="member_ids" eval="[(4, ref('base.user_root')),(4, ref('base.user_demo'))]"/>
        </record>

        <!-- sale.order -->
        <record model="sale.order" id="sale_with_sales_team_invoice_partner">
            <field name="partner_id" ref="base.res_partner_2"/>
            <field name="partner_invoice_id" ref="base.res_partner_2"/>
            <field name="partner_shipping_id" ref="base.res_partner_2"/>
            <field name="user_id" ref="base.user_demo"/>
            <field name="pricelist_id" ref="product.list0"/>
            <field name="section_id" ref="crm_case_section_invoice_partner"/>
            <field name="date_order" eval="(DateTime.today() - relativedelta(months=1)).strftime('%Y-%m-%d %H:%M')"/>
        </record>

        <record id="sale_order_line_sales_team_invoice_partner" model="sale.order.line">
            <field name="order_id" ref="sale_with_sales_team_invoice_partner"/>
            <field name="name">Laptop E5023</field>
            <field name="product_id" ref="product.product_product_25"/>
            <field name="product_uom_qty">3</field>
            <field name="product_uos_qty">3</field>
            <field name="product_uom" ref="product.product_uom_unit"/>
            <field name="price_unit">2950.00</field>
        </record>

    </data>
</openerp>
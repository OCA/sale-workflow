<?xml version="1.0" encoding="utf-8"?>                                                                                                      
<openerp>
    <data>

        <record id="view_order_form" model="ir.ui.view">
            <field name="name">sale.order.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">

                <data>

                    <xpath expr="//notebook//tree/field[@name='price_unit']"
                           position="before"
                           >
                        <field name="list_price" />
                    </xpath>

                    <xpath expr="//notebook//tree/field[@name='discount']"
                           position="replace"
                           >
                        <field name="visible_discount" />
                    </xpath>

                </data>

            </field>
        </record>

        <template id="report_saleorder_document" inherit_id="sale.report_saleorder_document">
            <xpath expr="//tr[@t-foreach='o.order_line']/td[@groups='sale.group_discount_per_so_line']"
                   position="replace">

                <td groups="sale.group_discount_per_so_line">
                    <span t-field="l.visible_discount"/>
                </td>

            </xpath>
        </template>

    </data>
</openerp>

<openerp>
    <data>

        <!-- VIEW FOR THE OBJECT : sale_workflow_process -->
        <record id="sale_workflow_process_view_form" model="ir.ui.view">
            <field name="name">sale_automic_workflow.sale_workflow_process.view_form</field>
            <field name="model">sale.workflow.process</field>
            <field name="arch" type="xml">
                <form string="Automatic Workflow">
                    <group>
                        <field name="name"/>
                    </group>
                    <group string="Order Configuration">
                        <field name="picking_policy"/>
                        <field name="team_id" />
                        <!-- <field name="team_id" groups="base.group_multi_salesteams"/> -->
                    </group>
                    <group string="Workflow Options" col="4">
                        <field name="validate_order" />
                        <field name="order_filter_id" attrs="{'required':[('validate_order','=',True)], 'readonly':[('validate_order','!=',True)]}"/>
                        <field name="validate_picking" />
                        <field name="picking_filter_id" attrs="{'required':[('validate_picking','=',True)], 'readonly':[('validate_picking','!=',True)]}"/>
                        <field name="create_invoice"/>                        
                        <field name="create_invoice_filter_id" attrs="{'required':[('create_invoice','=',True)], 'readonly':[('create_invoice','!=',True)]}"/>
                        <field name="validate_invoice"/>
                        <field name="validate_invoice_filter_id" attrs="{'required':[('validate_invoice','=',True)], 'readonly':[('validate_invoice','!=',True)]}"/>
                        <field name="register_payment"/>
                        <field name="payment_filter_id" attrs="{'required':[('register_payment','=',True)], 'readonly':[('register_payment','!=',True)]}"/>
                        <field name="sale_done"/>
                        <field name="sale_done_filter_id" attrs="{'required':[('sale_done','=',True)], 'readonly':[('sale_done','!=',True)]}"/>
                        <field name="invoice_date_is_order_date"/>
                        <field name="property_journal_id" groups="account.group_account_invoice"
                               domain="[('type', '=', 'sale')]"/>
                        <field name="warning"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="sale_workflow_process_view_tree" model="ir.ui.view">
            <field name="name">sale_automic_workflow.sale_workflow_process.view_tree</field>
            <field name="model">sale.workflow.process</field>
            <field name="arch" type="xml">
                <tree string="Automatic Workflow">
                    <field name="name"/>
                    <field name="picking_policy"/>
                    <field name="team_id"/>
                    <!-- <field name="team_id" groups="base.group_multi_salesteams"/> -->
                    <field name="validate_order"/>
                    <field name="validate_picking"/>
                    <field name="validate_invoice"/>
                    <field name="invoice_date_is_order_date"/>
                    <field name="register_payment"/>
                </tree>
            </field>
        </record>

        <record id="act_sale_workflow_process_form" model="ir.actions.act_window">
            <field name="name">Automatic Workflow</field>
            <field name="res_model">sale.workflow.process</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem action="act_sale_workflow_process_form" id="menu_act_sale_workflow_process_form" parent="base.menu_sale_config_sales" sequence="20"/>

    </data>
</openerp>

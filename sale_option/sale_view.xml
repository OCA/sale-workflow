<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>


        <record id="view_sale_line_form" model="ir.ui.view">
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='order_line']" position="attributes">
                    <attribute name="context">{'default_pricelist_id': pricelist_id}</attribute>
                </xpath>
                <xpath expr="//field[@name='order_line']/form/group/group/field[@name='price_unit']" position="after">
                    <field name="base_price_unit"/>
                    <field name="pricelist_id" invisible="True"/>
                </xpath>
                <xpath expr="//field[@name='order_line']/form/field[@name='name']" position="after">
                    <div>
                        <label for="optional_bom_line_ids"/>
                        <field name="optional_bom_line_ids">
                            <tree editable="top">
                                <field name="bom_line_id" domain="['|', '&amp;', ('bom_id.product_tmpl_id.product_variant_ids', '=', parent.product_id), ('bom_id.product_id', '=', False), ('bom_id.product_id', '=', parent.product_id), ('option_id', '!=', False)]"/>
                                <field name="qty"/>
                                <field name="line_price"/>
                            </tree>
                        </field>
                    </div>
                </xpath>
                <xpath expr="//field[@name='order_line']/tree/field[@name='product_uom_qty']" position="after">
                    <field name="optional_bom_line_ids"/>
                </xpath>
            </field>
        </record>

    </data>
</openerp>

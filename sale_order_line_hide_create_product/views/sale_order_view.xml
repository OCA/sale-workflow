<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="sale_order_view_order_form" model="ir.ui.view">
        <field name="name">sale.order.view.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <xpath
                expr="//field[@name='order_line']/form/group/group/field[@name='product_id']"
                position="attributes"
            >
                <attribute
                    name="options"
                >{'no_create': True, 'no_create_edit':True}</attribute>
            </xpath>
            <xpath
                expr="//field[@name='order_line']/tree/field[@name='product_id']"
                position="attributes"
            >
                <attribute
                    name="options"
                >{'no_create': True, 'no_create_edit':True}</attribute>
            </xpath>
            <xpath
                expr="//field[@name='order_line']/tree/field[@name='product_template_id']"
                position="attributes"
            >
                <attribute
                    name="options"
                >{'no_create': True, 'no_create_edit':True}</attribute>
            </xpath>
        </field>
    </record>
</odoo>

<odoo>
    <record model="ir.ui.view" id="sale_order_view_form">
        <field name="name">sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <sheet position="before">
                <div
                    class="alert alert-danger alert-dismissable"
                    role="alert"
                    style="margin-bottom:0px;"
                    attrs="{'invisible':[('warehouse_rule_need_change','=', False)]}"
                >
                    <field name="warehouse_rule_need_change" />
                </div>
                <div
                    class="alert alert-info alert-dismissable"
                    role="alert"
                    style="margin-bottom:0px;"
                    attrs="{'invisible':[('warehouse_rule_info','=', False)]}"
                >
                    <field name="warehouse_rule_info" />
                </div>
            </sheet>
        </field>
    </record>
</odoo>

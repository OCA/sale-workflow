<odoo>

    <record id="product_template_form_view_inherit_stock" model="ir.ui.view">
        <field name="name">product_template_form_view_inherit_stock</field>
        <field name="model">product.template</field>
        <field name="priority">101</field>
        <field name="inherit_id" ref="product.product_template_form_view" />
        <field name="arch" type="xml">
            <div name="options" position="inside">
                <div>
                    <field name="ship_ok" />
                    <label for="ship_ok" />
                </div>
            </div>
            <group name="candidate_fields" position="inside">
                <group>
                    <separator string="Stock" />
                    <field
                        name="candidate_ship"
                        readonly="not can_edit_candidate"
                    />
                </group>
            </group>
        </field>
    </record>

</odoo>

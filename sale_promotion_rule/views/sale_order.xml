<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

<record id="view_order_form" model="ir.ui.view">
    <field name="model">sale.order</field>
    <field name="inherit_id" ref="sale.view_order_form"/>
    <field name="arch" type="xml">
        <field name="amount_untaxed" position="before">
            <div class=" oe_inline">
                <label for="promotion_rule_id" class="oe_form_label_help"/>
                <button
                    name="apply_promotion"
                    states="draft,sent"
                    string="(Apply discount)"
                    type="object"
                    class="oe_edit_only oe_link"/>
                <button
                    name="clear_promotion"
                    attrs="{'invisible': [('promotion_rule_id', '=', False)]}"
                    string="(Remove discount)"
                    type="object"
                    class="oe_edit_only oe_link"/>
            </div>
            <field name="promotion_rule_id" nolabel="1" string="Promo"/>
        </field>
    </field>
</record>

    </data>
</odoo>

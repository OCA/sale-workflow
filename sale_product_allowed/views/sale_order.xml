<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="view_order_form" model="ir.ui.view">
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <!-- to pass after the sale_commitment_date_mandatory -->
        <field name="priority" eval="110" />
        <field name="arch" type="xml">
            <field name="payment_term_id" position="before">
                <field name="product_allowed_config_ids" />
            </field>
            <xpath
                expr="//field[@name='order_line']//tree//field[@name='product_id']"
                position="before"
            >
                <field name="allowed_product_ids" invisible="1" />
            </xpath>
            <xpath
                expr="//field[@name='order_line']//tree//field[@name='product_id']"
                position="attributes"
            >
                <attribute name="domain">[('id', 'in', allowed_product_ids)]</attribute>
                <attribute name="options">{"no_create": True}</attribute>
            </xpath>
            <xpath
                expr="//field[@name='order_line']//tree//field[@name='product_template_id']"
                position="attributes"
            >
                <attribute
                    name="domain"
                >[('product_variant_ids.id', 'in', allowed_product_ids)]</attribute>
                <attribute name="options">{"no_create": True}</attribute>
            </xpath>
            <xpath expr="//notebook" position="inside">
                <page
                    name="season_allowed_products"
                    string="Allowed Products"
                    groups="base.group_no_one"
                >
                    <field name="allowed_product_ids" nolabel="1" />
                </page>
            </xpath>
        </field>
    </record>

</odoo>

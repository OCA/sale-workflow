<odoo>
    <template
        id="report_delivery_document"
        inherit_id="stock.report_delivery_document"
        priority="20"
    >
        <xpath
            expr="//table[@t-if=&quot;o.state!='done'&quot;]/thead/tr"
            position="inside"
        >
            <th>
                <strong>Elab.</strong>
            </th>
        </xpath>
        <xpath expr="//span[@t-field='move.product_id']/../.." position="inside">
            <td>
                <span t-field="move.sale_line_id.elaboration_id.code" />
            </td>
        </xpath>
        <xpath
            expr="//table[@t-if=&quot;o.move_line_ids and o.state==&apos;done&apos;&quot;]/thead/tr"
            position="inside"
        >
            <th>
                <strong>Elaboration</strong>
            </th>
        </xpath>
        <xpath expr="//tr[@t-as='move_line']" position="inside">
            <td>
                <span t-field="move_line.move_id.sale_line_id.elaboration_id.code" />
            </td>
        </xpath>
    </template>
</odoo>

<odoo>

    <record model="ir.ui.view" id="sale_order_form_view">
        <field name="name">sale.order.form (in sale_product_documentation_set)</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <field name="payment_term_id" position="after">
                <field name="product_doc_set_ids" widget="many2many_tags"/>
                <button type="object" name="product_documentation_reset" string="Update" />
            </field>
        </field>
    </record>

    <record model="ir.ui.menu" id="sale_product_documentation_set_menu">
        <field name="name">Product Documentation</field>
        <field name="parent_id" ref="sale.product_menu_catalog"/>
        <field name="action" ref="product_documentation_set.product_doc_set_act_window"/>
        <field name="sequence" eval="20"/>
    </record>

</odoo>

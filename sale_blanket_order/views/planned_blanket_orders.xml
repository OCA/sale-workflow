<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_blanket_planned_order_form" model="ir.ui.view">
        <field name="name">sale.blanket.planned.order.form</field>
        <field name="model">sale.blanket.planned.order</field>
        <field name="arch" type="xml">
            <form string="Blanket planned Order Lines">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="next_order_date" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <field name="line_ids" mode="tree" nolabel="1">
                            <tree>
                                <field name="product_id"
                                        context="{'partner_id':parent.partner_id, 'quantity':original_qty, 'company_id': parent.company_id}"
                                        readonly="1"/>
                                <field name="next_order_qty" readonly="1"/>
                                <field name="remaining_qty"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_create_sale_order" model="ir.ui.view">
        <field name="name">Create Sale Order</field>
        <field name="model">sale.blanket.order.wizard</field>
        <field name="arch" type="xml">
            <form string="Create Sale Order">
                <field name="mode" invisible="1"/>
                <label for="planned_date" string="Date"/>
                <field name="planned_date"
                    attrs="{'invisible': [('mode', '!=', 'planned')],
                            'required': [('mode', '=', 'planned')]}"/>
                <group>
                    <field name="lines_ids" nolabel="1">
                        <tree create="false" editable="bottom">
                            <field name="product_id"/>
                            <field name="remaining_qty"/>
                            <field name="qty"/>
                        </tree>
                    </field>
                </group>
                <footer>
                    <button name="create_sale_order" string="Create and View Order" type="object"
                        class="btn-primary"
                        attrs="{'invisible': [('mode', '!=', 'instant')]}"/>
                    <button name="create_planned_sale_order" string="Plan Sale Order" type="object"
                        class="btn-primary"
                        attrs="{'invisible': [('mode', '!=', 'planned')]}"/>
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_create_sale_order" model="ir.actions.act_window">
        <field name="name">Create Sale Order</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sale.blanket.order.wizard</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{'default_mode': 'instant'}</field>
    </record>

    <record id="action_create_planned_sale_order" model="ir.actions.act_window">
        <field name="name">Create Planned Sale Order</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sale.blanket.order.wizard</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{'default_mode': 'planned'}</field>
    </record>
</odoo>
